@model EmployeeViewModel
@{
    ViewData["Title"] = @Localize["Employees.Create.Title"];
}

<h3 class="mb-3">@Localize["Employees.Create.Heading"]</h3>
<form method="post" data-track="form">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-floating">
                <input asp-for="Name" class="form-control" placeholder="@Html.DisplayNameFor(model => model.Name)" />
                <label asp-for="Name"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
    </div>
    <partial name="_CreateButtonsPartial" />
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
    @section Submenu{
    <div class="row py-3 align-items-center">
        <div class="col-md-6 mb-2 mb-md-0">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item">
                        <a asp-action="Index" asp-controller="Home">@Localize["Breadcrumb.Home.Index"]</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-action="List">@Localize["Breadcrumb.Employees.List"]</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        @Localize["Breadcrumb.Employees.Create"]
                    </li>
                </ol>
            </nav>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="List" class="btn btn-dark">@Localize["Submenu.Employees.List.Button"]</a>
        </div>
    </div>
}
